@model IEnumerable<T11HabitatandAnimals.Models.threatened_animal_vic>

@{
    ViewBag.Title = "Index";

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
}

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>KOLAROO - landanimals</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">
</head>



    <!-- ======= Header ======= -->


    <main id="main">

        <!-- ======= Portfolio Section ======= -->
        <section id="portfolio" class="portfolio">
            <div class="container">

                <div class="section-title">
                    <h3>Meet<span>Victoria's threatened species</span></h3>
                    <p>
                        Victoria is rich in unique Australian animals. However, a large and growing number of these animals are now threatened with extinction. Find out more about Victoria's endangered species, and their main threats.


                    </p>
                </div>

                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-center">
                        <ul id="portfolio-flters">
                            <li data-filter="*" class="filter-active">All</li>
                            <li data-filter=".filter-1">BawBawFrog</li>
                            <li data-filter=".filter-2">Rockwallaby</li>
                            <li data-filter=".filter-3"> BarredBandicoot</li>
                            <li data-filter=".filter-4">GreaterGlider</li>
                            <li data-filter=".filter-5">Leadbeater'sPossum</li>
                            <li data-filter=".filter-6">MountainPygmy-possum</li>
                        </ul>
                    </div>
                </div>

                <div class="row portfolio-container">

                    <div class="col-lg-4 col-md-6 portfolio-item filter-1">

                        <img src="~/assets/img/portfolio/Baw Baw Frog.jpg" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>Baw Baw Frog</h4>

                            <a href="@Url.Action("BawBawFrog","Animals")" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                        </a>
                    </div>

                    <div class="col-lg-4 col-md-6 portfolio-item filter-2">
                        <img src="~/assets/img/portfolio/Brush-tailed Rock-wallaby.jpg" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>Brush-tailed Rock-wallaby</h4>

                            <a href="@Url.Action("BrushtailedRock","Animals")" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 portfolio-item filter-3">
                        <img src="~/assets/img/portfolio/Eastern Barred Bandicoot.jpg" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>Eastern Barred Bandicoot</h4>

                            <a href="@Url.Action("EasternBarredBandicoot","Animals")" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 portfolio-item filter-4">
                        <img src="~/assets/img/portfolio/Greater Glider.jpg" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>Greater Glider</h4>

                            <a href="@Url.Action("GreaterGlider","Animals")" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 portfolio-item filter-5">
                        <img src="~/assets/img/portfolio/Leadbeater's Possum.jpg" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>Leadbeater's Possum</h4>


                            <a href="@Url.Action("LeadbeaterPossum","Animals")" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 portfolio-item filter-6">
                        <img src="~/assets/img/portfolio/Mountain Pygmy-possum.jpg" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>Mountain Pygmy-possum</h4>

                            <a href="@Url.Action("MountainPygmypossum","Animals")" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>


                </div>

            </div>
        </section><!-- End Portfolio Section -->


    </main><!-- End #main -->


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Scientific_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Common_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Threatened_status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Scientific_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Common_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Threatened_status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    @section Scripts {
        @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
        @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")

        <script>
            $(document).ready(function () {
                $('.table').DataTable();
            });
        </script>
    }
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
          rel="stylesheet" />


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>


