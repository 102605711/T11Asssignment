@model T11HabitatandAnimals.Models.SendEmailViewModel

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Tempo Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/Style.css" rel="stylesheet" />
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top ">
        <div class="container d-flex align-items-center justify-content-between">

            <a href="@Url.Action("kolaroo", "Home")" class="logo"><img src="~/assets/img/logo.png" alt="" class="img-fluid"></a>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto" href="@Url.Action("kolaroo", "Home")">Home</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("landanimals", "Home")">Land Animals</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("habitat", "Home")">Habitats</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero">
        <div class="hero-container">
            <h1>KOLAROO VICTORIA</h1>
            <h2>Empowering people to save the Land Animals</h2>
            <a href="@Url.Action("Index", "Home")" class="btn-get-started scrollto">Back to Home</a>
        </div>
    </section><!-- End Hero -->
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">

            <div class="section-title">

                <h3>Subscribe <span>To get lastest news</span></h3>
             
            </div>

            <div class="row content">
                <div class="col-lg-6">
                    <ul style="line-height: 2.5; font-family: cursive;color: rgb(8, 117, 150); font-size: 18px;">
                        <li><i class="ri-check-double-line"></i> Feel free to subscribe!</li>
                        <li><i class="ri-check-double-line"></i> Gat lastest news!</li>
                        <li><i class="ri-check-double-line"></i> Get useful news!</li>
                    </ul>
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0">

                    <p style="line-height: 2.5;">
                  
                        We will not  use your mail address in any business purpose activities, and all mails are free without any charges, also you can unsubscibe news at any time.
                        All operations are under the Australia policy ruglars.
                    </p>
                  
                </div>
            </div>

        </div>
    </section><!-- End About Section -->


    <footer id="footer">

        <div class="footer-newsletter">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6" style="padding-left:400px;">
                        <h4 style="padding-left:200px">Newsletter</h4>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">

                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ToEmail, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ToEmail, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Send" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>


    </footer><!-- End Footer -->


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>